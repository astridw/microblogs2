<h1>Waves#index</h1>

<p>Hi <%= @current_user.username %></p>

<%= form_for @wave, url: post_wave_path do |f| %>
<%= f.text_area :post %>
<%= f.submit %>
<% end %>

<div class="wave">

  <ul>
    <% @waves.each do |wave| %>
    <li class="wave">
      <%= wave.post %>
      <br/>
      On <%= wave.created_at %> by <%= wave.user.username %>
    </li>
    <% end %>
  </ul>

</div>
